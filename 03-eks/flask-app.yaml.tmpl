apiVersion: apps/v1
kind: Deployment
metadata:
  name: flask-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: flask-app
  template:
    metadata:
      labels:
        app: flask-app
    spec:
      serviceAccountName: dynamodb-access-sa
      containers:
        - name: flask-app
          image: ${account_id}.dkr.ecr.us-east-2.amazonaws.com/flask-app:flask-app-rc1
          ports:
            - containerPort: 8000
          env:
            - name: FLASK_ENV
              value: "production"
          livenessProbe:
            httpGet:
              path: /gtg   # Same as ALB health check
              port: 8000
            initialDelaySeconds: 5
            periodSeconds: 10
            failureThreshold: 3
---
apiVersion: v1
kind: Service
metadata:
  name: flask-app-service
spec:
  selector:
    app: flask-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8000
  type: NodePort

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: flask-app-ingress
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/target-type: ip
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP": 80}]'
    alb.ingress.kubernetes.io/group.name: flask-alb-group
    alb.ingress.kubernetes.io/healthcheck-path: /gtg              # Custom health check path
    alb.ingress.kubernetes.io/healthcheck-port: "8000"            # Health check port
    alb.ingress.kubernetes.io/healthcheck-interval-seconds: "15"  # Health check interval
    alb.ingress.kubernetes.io/healthcheck-timeout-seconds: "5"    # Health check timeout
    alb.ingress.kubernetes.io/healthy-threshold-count: "2"        # Healthy threshold
    alb.ingress.kubernetes.io/unhealthy-threshold-count: "2"      # Unhealthy threshold
    alb.ingress.kubernetes.io/success-codes: "200-310"            # Success HTTP codes
  labels:
    app: flask-app
spec:
  ingressClassName: alb
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: flask-app-service
                port:
                  number: 80
